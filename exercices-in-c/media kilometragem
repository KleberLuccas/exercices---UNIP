#include <stdio.h>

int main(void){

    float kmpercorrido, kmlitro, calclitros, valorcombusivel, calcvalorcombustivel;

    printf("Quantidade media de combustivel por KM rodado: ");
    scanf("%f", &kmlitro);
    printf("Quantidade de KM percorridos: ");
    scanf("%f", &kmpercorrido);
    printf("Qual o valor do combustivel R$");
    scanf("%f", &valorcombusivel);

    calclitros = kmpercorrido / kmlitro;
    calcvalorcombustivel = valorcombusivel * calclitros;

    printf("Serao necessarios %.4f litros de combustivel para percorrer %.1fkm\n", calclitros, kmpercorrido);
    printf("O valor total a ser pago Ã© de R$%.2f", calcvalorcombustivel);

    return 0;
}
