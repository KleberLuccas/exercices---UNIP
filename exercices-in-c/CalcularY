#include<stdio.h>
#include<math.h>

int main()
{
    float x, y;

    printf("Coloque o valor de x\n");
    scanf("%f", &x);
    if(x < 1){
        y = x;
    }else if(x == 1){
        y = 0;
    }else{
        y = pow(x,2);
    }
    printf ("Y recebe o valor de %0.2f, pois o valor de x e %.2f", y, x);

return 0;
}
