#include<stdio.h>

#define m2 100
#define pi 3,14

int main(void){
    float raio, altura, area_lata, area_lateral, resultado;

    printf("Por favor insira o raio");
    scanf("%f", &raio);
    printf("Por favor, insira a altura");
    scanf("%f", &altura);

    area_lata = pi* raio * raio;

    area_lateral = 2*pi*raio*altura;

    resultado = (area_lata + area_lateral)*m2;

    printf("O resultado Ã© %.2f", resultado);

    return 0;
}
