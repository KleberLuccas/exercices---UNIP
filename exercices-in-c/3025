#include<stdio.h>
int main()
{
    int n1, n2, resto, soma, backup;

    printf("Insira o valor a ser calculado");
    scanf("%i", &n1);
    backup = n1;


    if (n1 < 9999 && n1 > 1000){
        n2 = n1%100;
        n1 = n1/100;

        soma = n1 + n2;
        soma = soma * soma;
        printf("%d", soma);

        if (soma == backup)
            printf("O numero foi verificado e atende aos requisitos");
        else
            printf("O numero foi verificado e e invalido");
    }
    else{
            printf("O numero Ã© invalido");
    }
return 0;
}
